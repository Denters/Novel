<Page x:Class="Novel.GameTitle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novel"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="960"
      Title="GameTitle" Width="Auto" Height="Auto">

    <Grid>
        <Grid Margin="0,0,0,0" Background="#FFD94747">
            <TextBlock x:Name="textBlock" Margin="0" TextWrapping="Wrap"><Run Text="TextBlock"/></TextBlock>
            <Button x:Name="button" Content="Button" Margin="0,0,310,189" HorizontalAlignment="Right" Width="75" Height="19" VerticalAlignment="Bottom" Click="button_Click"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" Margin="28,39,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
